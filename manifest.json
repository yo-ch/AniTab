{
  "manifest_version": 2,

  "name": "NewTab!",
  "short_name": "NT!",
  "description": "Replaces the new tab screen with a wallpaper and a simple clock.",
  "version": "1.0",

  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },

  "browser_action": {
    "default_icon": "images/icon48.png",
    "default_popup": "options.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": ["storage", "unlimitedStorage"]
}
