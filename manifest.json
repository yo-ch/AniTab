{
  "manifest_version": 2,

  "name": "NewTab!",
  "description": "Displays the current time with a wallpaper in new tabs.",
  "version": "1.0",

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": ["storage"]
}
